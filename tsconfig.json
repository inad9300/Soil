{
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts", "src/**/*.script.ts"],
    "compilerOptions": {
        "outDir": "dist",
        "module": "umd",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es6", "dom"],
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true
    }
}
