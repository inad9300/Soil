{
    "compilerOptions": {
        "module": "umd",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es6", "dom"],
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "build",
        "sourceMap": true,
        "declaration": true
    },
    "include": ["**/src"],
    "exclude": ["**/*.test.ts"]
}
