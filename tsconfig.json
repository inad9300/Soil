{
    "include": ["**/src/*.ts"],
    "exclude": ["**/*.test.ts"],
    "compilerOptions": {
        "outDir": "build",
        "module": "umd",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es6", "dom"],
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true
    }
}
