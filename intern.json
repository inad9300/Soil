{
    "environments": [{
        "browserName": "chrome",
        "chromeOptions": {"args": ["headless"]}
    }],
    "capabilities": {"fixSessionCapabilities": "no-detect"},
    "loader": {"script": "dojo2"},
    "suites": ["build/**/*.test.js"],
    "coverage": ["build/{dom,arch}/**/!(*.test).js"],
    "reporters": [{
        "name": "pretty"
    }, {
        "name": "jsoncoverage",
        "options": {"filename": "coverage.json"}
    }]
}
