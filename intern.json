{
    "environments": [{
        "browserName": "chrome",
        "goog:chromeOptions": {
            "args": ["headless", "disable-gpu"]
        }
    }],
    "capabilities": {"fixSessionCapabilities": "no-detect"},
    "loader": {"script": "dojo2"},
    "suites": ["build/{dom,arch}/**/*.test.js"],
    "coverage": ["build/{dom,arch}/**/!(*.test).js"],
    "reporters": [{
        "name": "pretty"
    }, {
        "name": "jsoncoverage",
        "options": {"filename": "coverage.json"}
    }]
}
