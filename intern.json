{
    "debug": false,
    "environments": {
        "browserName": "chrome",
        "goog:chromeOptions": {
            "args": ["headless", "disable-gpu", "window-size=1024,768"]
        },
        "moz:firefoxOptions": {
            "args": ["-headless", "--window-size=1024,768"]
        },
        "fixSessionCapabilities": "no-detect"
    },
    "tunnelOptions": {
        "drivers": [{"name": "chrome", "version": "74.0.3729.6"}]
    },
    "loader": {"script": "dojo2"},
    "suites": ["build/{dom,arch}/**/*.test.js"],
    "coverage": ["build/{dom,arch}/**/!(*.test).js"],
    "reporters": [{
        "name": "simple"
    }, {
        "name": "jsoncoverage",
        "options": {"filename": "coverage.json"}
    }]
}
